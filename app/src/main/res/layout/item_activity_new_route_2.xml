<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_new_route_2_image"
            android:layout_marginStart="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sagradafamilia"
            android:layout_gravity="center_vertical"
            android:contentDescription="image objectItem inside new route" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_new_route_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:text="Name"/>

            <TextView
                android:id="@+id/item_new_route_2_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7C7A7A"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="Category"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>